{
  "build": {
    "builder": "NIXPACKS",
    "nixpacksConfig": {
      "providers": ["node"],
      "phases": {
        "setup": {
          "nixPkgs": ["nodejs_18", "python3", "gcc", "make"]
        },
        "install": {
          "cmds": ["cd backend && npm install --legacy-peer-deps"]
        },
        "start": {
          "cmds": ["cd backend && npm start"]
        }
      }
    }
  }
}
